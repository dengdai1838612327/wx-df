/* pages/dd-submit/dd-submit.wxss */
.itemlist {
	width: 100%;
	background: #fff;
	margin-bottom: 6px;
	font-size: 13px;
}
.itemtop {
	border-bottom: 1px solid #e5e5e5;
	height: 35px;
	line-height: 35px;
	overflow: hidden;
}
.itemtop p {
	border-left: 6px solid #1888e6;
	font-size: 13px;
	height: 20px;
	line-height: 1.8;
	margin-left: 10px;
	margin-top: 7px;
	padding-left: 8px;
}
.iteminfo {
	padding: 0 0 0 20px;
}
.iteminfo .li {
	border-bottom: 1px solid #ccc;
	height: 40px;
	line-height: 40px;
	color: #666;
}
.iteminfo .li p {
	display: inline-block;
	margin: 0;
}
.iteminfo .li .fr {
	float: right;
	margin-right: 10px;
}
.iteminfo .li:last-child {
	border-bottom: none;
}
.tijiao .all {
	margin-left: 20px;
}